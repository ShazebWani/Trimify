# Database Configuration
# PostgreSQL database URL - required for data persistence
DATABASE_URL=postgresql://username:password@localhost:5432/barbershop_db

# Individual PostgreSQL connection parameters (auto-populated in Replit)
PGHOST=localhost
PGPORT=5432
PGUSER=username
PGPASSWORD=password
PGDATABASE=barbershop_db

# Authentication & Security
# Session secret for secure authentication - generate a random string
SESSION_SECRET=your-super-secret-session-key-here-make-it-long-and-random

# Replit Configuration (auto-populated in Replit environment)
REPL_ID=your-repl-id
REPLIT_DOMAINS=your-repl-name.replit.dev,your-custom-domain.com
ISSUER_URL=https://replit.com/oidc

# Payment Integration (Optional - for premium features)
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_publishable_key_here

# For subscriptions (Optional)
STRIPE_PRICE_ID=price_your_subscription_price_id_here

# Email Configuration (Optional - for notifications)
# Example with SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key-here
FROM_EMAIL=noreply@yourdomain.com

# SMS Configuration (Optional - for notifications)
# Example with Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Environment
NODE_ENV=development

# Server Configuration
PORT=5000

# Application Configuration
APP_NAME=Trimify
APP_URL=https://your-app-domain.com

# File Upload Configuration (Optional)
# For logo uploads, gallery images, etc.
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Feature Flags (Optional)
ENABLE_ANALYTICS=true
ENABLE_REVIEWS=true
ENABLE_GALLERY=true
ENABLE_NOTIFICATIONS=true
ENABLE_MULTI_LOCATION=false

# Third-party Integrations (Optional)
# Google Maps API for location services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Social Media Integration (Optional)
FACEBOOK_APP_ID=your-facebook-app-id
INSTAGRAM_ACCESS_TOKEN=your-instagram-token

# Monitoring & Analytics (Optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Development Settings
# Only used in development environment
VITE_DEV_SERVER_PORT=3000
VITE_API_URL=http://localhost:5000

# Production Settings
# Only used in production environment
PROD_DATABASE_URL=postgresql://prod_user:prod_password@prod_host:5432/prod_db
PROD_SESSION_SECRET=your-production-session-secret